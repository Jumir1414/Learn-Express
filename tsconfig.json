// tsconfig.json

{
    "compilerOptions": {
        "target": "ES2020",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src", 
      "esModuleInterop": true,

      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"]
      }
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }
  